<!doctype html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - CasoPractico</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-light">
    <nav class="navbar navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Login">CasoPractico</a>

            <ul class="navbar-nav ms-auto flex-row gap-2">
                <li class="nav-item">
                    <a id="navLogin" class="btn btn-outline-light btn-sm" asp-controller="Home" asp-action="Login">Login</a>
                </li>
                <li class="nav-item">
                    <a id="navHome" class="btn btn-light btn-sm d-none" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="nav-item">
                    <button id="navLogout" class="btn btn-outline-warning btn-sm d-none" type="button">Logout</button>
                </li>
            </ul>
        </div>
    </nav>

    <main class="container py-4">
        @RenderBody()
    </main>

    <footer class="border-top py-3 text-center text-muted">
        <small>&copy; @DateTime.Now.Year Caso Practico Valeria Vega Madrigal</small>
    </footer>

    <script src="~/js/session.js" asp-append-version="true"></script>
        </script>
    @RenderSection("Scripts", required: false)
    @RenderSection("Modals", required: false)
</body>
</html>
