<!doctype html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - CasoPractico</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="preauth">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Login">CasoPractico</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a id="navLogin" class="nav-link" asp-controller="Home" asp-action="Login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a id="navHome" class="nav-link d-none" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a id="navApprovals" class="nav-link d-none" asp-controller="Approvals" asp-action="Index">Approvals</a>
                    </li>
                    <li class="nav-item">
                        <a id="navRoles" class="nav-link d-none" asp-controller="Roles" asp-action="Index">Roles</a>
                    </li>
                    <li class="nav-item">
                        <a id="navLogout" class="nav-link d-none" href="#">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container py-4">
        @RenderBody()
    </main>

    <div id="toastZone" class="toast-container position-fixed top-0 end-0 p-3"></div>

    @RenderSection("Modals", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/session.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
